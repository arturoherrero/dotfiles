#!/usr/bin/env bash

# Install RVM stable with Ruby
\curl -sSL https://get.rvm.io | bash -s stable --ruby

# Install Homebrew
ruby -e "$(curl -fsSL https://raw.github.com/Homebrew/homebrew/go/install)"

# Install formulas
brew install ack
brew install autossh
brew install bash
brew install git
brew install htop-osx
brew install hr
brew install hub
brew install macvim
brew install pstree
brew install tmux
brew install tree
brew install webkit2png
brew install wget
