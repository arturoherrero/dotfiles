[user]
  name = Arturo Herrero
  email = arturo.herrero@gmail.com
[color]
  ui = auto
[alias]
  br = branch
  ca = git add -A && git commit -v
  ci = commit
  co = checkout
  hist = log --pretty=format:\"%C(auto) %h %s [%an]\" --graph
  last = log -1 HEAD
  st = status
  stats = shortlog -sn
  unstage = reset HEAD --
[core]
  excludesfile = ~/.gitignore
[push]
  default = simple
